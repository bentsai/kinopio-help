:root
  --primary black
  // --primary-background white

  // --secondary #818181
  // --secondary-background #e3e3e3
  --secondary-hover-background #d8d8d8
  --secondary-active-background #cdcdcd

  --light-shadow rgba(0,0,0,0.20)
  --heavy-shadow rgba(0,0,0,0.25)

  // --danger-background #ffb8b3
  // --danger-hover-background #ffa49e
  // --danger-active-background #ff928b

  --info-background #90ffff
  --success-background #98f49f

  // non-theme vars
  // --max-z 2147483647
  --hover-shadow 3px 3px 0 var(--heavy-shadow)
  // --active-shadow 5px 5px 0 var(--light-shadow)
  // --active-inset-shadow inset 0 2px 3px var(--light-shadow)
  --button-shadow 2px 2px 0 var(--light-shadow)
  // --button-hover-shadow inset 0 1px 2px var(--heavy-shadow)
  --button-active-inset-shadow inset 2px 2px 2px var(--heavy-shadow)

  // help site vars
  --sans-serif Helvetica Neue, Helvetica, Arial, sans-serif
  --max-page-width 520px
  --page-margin 20px
  --page-background #dbdbdb
  --table-border #c5c5c5


// Elements

@font-face
  font-family 'OsakaMono-Kinopio'
  src url("/assets/OsakaMono-Kinopio.woff2") format("woff2")
  font-weight normal
  font-style normal

*
  -webkit-overflow-scrolling touch
  -webkit-tap-highlight-color transparent
  box-sizing border-box
  // font-family "OsakaMono-Kinopio", monospace

body
  margin var(--page-margin)
  color var(--primary)
  font-family var(--sans-serif)
  background-color var(--page-background)

.logo
  background-image url('/assets/logo-base.png')
  background-size contain
  background-repeat no-repeat
  width 50px
  height 42px
  vertical-align -13px
  margin-right 12px
  display inline-block

.hidden
  display none

h1
  font-size 20px

h2,
h3
  font-size 16px

h1,
h2,
a,
p
  max-width var(--max-page-width)

p
  line-height 1.2

a
  color blue
  &:hover
    text-decoration none

form
  margin 0
  display flex

input
  font-size 16px
  font-family var(--sans-serif)
  background-color transparent
  border none
  border-radius 0
  border-bottom 1px solid black

img
  width 100%
  max-width var(--max-page-width)

ul
  padding 0
  li
    list-style none
    margin-bottom 12px
    a
      color var(--primary)
      text-decoration none
      background var(--info-background)
      padding 4px 5px
      border-radius 3px
      box-shadow var(--button-shadow)
      &:hover,
      &:focus
        box-shadow var(--hover-shadow)
      &:active
        box-shadow var(--button-active-inset-shadow)

button
  touch-action manipulation
  text-align left
  padding 7px
  padding-top 4px
  padding-bottom 4px
  margin 0
  border 1px solid var(--primary)
  background-color transparent
  border-radius 3px
  cursor pointer
  user-select none
  font-size 14px
  font-family var(--sans-serif)
  &:hover,
  &:focus
    box-shadow var(--hover-shadow)
    background var(--secondary-hover-background)
  &:active
    color var(--primary)
    box-shadow var(--button-active-inset-shadow)
    background var(--secondary-active-background)

code
  background var(--success-background)
  color var(--primary)
  padding 2px
  padding-left 6px
  padding-right 6px
  border-radius 3px
  font-family "OsakaMono-Kinopio", monospace

blockquote
  margin 0
  background var(--success-background)
  border-radius 3px
  padding 8px
  max-width var(--max-page-width)
  display inline-block
  p
    margin 0

canvas#background
  position: fixed
  background-color transparent
  top 0
  left 0
  z-index -1
canvas#page-background
  position: absolute
  background-color transparent
  top 0
  left 0
  z-index -2

.table-wrap
  overflow-x auto
  border-radius 3px
  padding-left 8px

table
  border-collapse collapse
  max-width 1000px
  th,
  td
    padding 8px
    padding-right 12px
    text-align left
    border-bottom 1px solid var(--table-border)
    max-width 520px
    &:first-child
      padding-left 0
  tr
    &:hover
      background rgba(255,255,255,.2)

// Components

header
  h1
    margin-top 0
    padding-top 0.67em // h1 default margin
  a
    color var(--primary)
    text-decoration none
    &:hover,
    &:focus
      text-decoration underline
      .logo
        background-image url('/assets/logo-hover.png')
    &:active
      .logo
        background-image url('/assets/logo-active.png')

.search
  display flex
  margin-bottom 2rem
  img
    width 18px
    padding-right 4px
    cursor text
    margin-top 1px

footer
  margin-top 2rem
  margin-bottom 2rem

nav
  position absolute
  right var(--page-margin)
  top var(--page-margin)
  button
    margin-left 6px

article
  ul,
  ol
    max-width var(--max-page-width)
    padding-left 1rem
    margin-left 1rem
    li
      margin-bottom 12px

  ul
    li
      list-style-type disc

  img,
  video
    width 420px
    max-width 100%
    border-radius 3px
    box-shadow 4px 4px 0 var(--light-shadow)
    &.wide
      width 700px
    &.narrow
      width 250px
    &.no-shadow
      box-shadow none

img + h2,
video + h2
  margin-top 1.5rem

ul.api-contents
  margin-top 2rem
  padding 0
  margin-left 0
  margin-right 0
  position sticky
  top 20px
  z-index 10
  li
    list-style none
    display inline-block
    margin-right 6px

.api
  h2,
  h3
    display inline-block
    padding 4px 5px
    border-radius 3px
  code
    line-height 1.2

  // colors should match api.pug
  .all,
  .users,
  .spaces,
  .cards,
  .connections,
  .connection-types
    color var(--primary)
    padding 2px 5px
  .all
    background khaki
  .users
    background #b9a8ff
  .spaces
    background pink
  .cards
    background violet
  .connections
    background salmon
  .connection-types
    background burlywood
  .tags
    background mediumaquamarine

  .get-label,
  .post-label,
  .patch-label
  .delete-label
    color rgba(255,255,255,0.9)
  .get-label
    background forestgreen
  .post-label
    background blueviolet
  .patch-label
    background peru
  .delete-label
    background firebrick

.anchor
  display block
  position relative
  top -40px
  visibility hidden

.froggo
  max-width 75px

.cat
  max-width 150px

.remove
  transform rotate(45deg)
  width 20px
  cursor pointer
  padding 5px

a.badge
  color var(--primary)
  text-decoration none
  background var(--info-background)
  padding 4px 5px
  border-radius 3px
  box-shadow var(--button-shadow)
  &:hover,
  &:focus
    box-shadow var(--hover-shadow)
  &:active
    box-shadow var(--button-active-inset-shadow)
