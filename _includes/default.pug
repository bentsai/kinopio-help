---
pageTitle: Kinopio Help and Support
pageSearchIsVisible: true
currentPage: help
---
html(lang="en")
  head
    title !{title}
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="Help site for Kinopio, the spatial thinking tool for new ideas and hard problems.")
    link(rel="stylesheet" href="/styles/styles.css")
    link(rel="canonical" href="https://kinopio.club")
  body
    header
      .title
        a(href='/')
          img.hidden(src="/assets/logo-hover.png")
          img.hidden(src="/assets/logo-active.png")
          .logo
          if pageTitle === 'Kinopio Help and Support'
            h1 !{pageTitle}
          else
            h1 !{pageTitle}

    nav
      .segmented-buttons
        a(href="/")
          button(class={active: currentPage === 'help'})
            span Help
        a(href="/api")
          button(class={active: currentPage === 'api'})
            span API
        a(href="/about")
          button(class={active: currentPage === 'about'})
            span About

      a(href="https://kinopio.club")
        button.kinopio Kinopio â†’

    if pageSearchIsVisible
      .search
        form
          img#search(src="/assets/search.svg")
          input(placeholder="Search")
          img#remove.remove(src="/assets/add.svg")

    main !{content}
  footer
    img.froggo(src="/assets/froggo.png")
    include contact.pug
    p
      a(href="https://github.com/kinopio-club/kinopio-help") View Source

  canvas#background
  canvas#page-background
  script(src="/assets/fuzzy-min.js")
  script(src="/assets/index.js")
